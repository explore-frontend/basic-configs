{
    "name": "vue3-admin",
    "private": true,
    "scripts": {
        "build": "NODE_ENV=production vite build --sourcemap true",
        "dev": "vite dev",
        "preview": "vite preview",
        "lint:js": "eslint --ext .ts,.tsx,.vue .",
        "lint:css": "stylelint './**/*.{vue,css,scss}'",
        "type-check": "vue-tsc --noEmit --skipLibCheck",
        "format-check": "prettier --check .",
        "format-fix": "pnpm format-check --write",
        "spell-check": "cspell lint --no-progress '**'",
        "ci-check": "pnpm exec npm-run-all --parallel --aggregate-output --print-name spell-check lint:js lint:css format-check type-check build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@vueuse/core": "^10.9.0",
        "@vueuse/head": "^2.0.0",
        "axios": "^1.4.0",
        "naive-ui": "^2.38.1",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@commitlint/types": "^19.0.3",
        "@kwai-explore/eslint-config": "workspace:*",
        "@kwai-explore/stylelint-config": "workspace:*",
        "@kwai-explore/tsconfig": "workspace:*",
        "@perfsee/rollup": "^1.12.2",
        "@rushstack/eslint-patch": "^1.8.0",
        "@types/color-string": "^1.5.5",
        "@unocss/transformer-directives": "^0.58.6",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/compiler-sfc": "^3.4.21",
        "@vue/server-renderer": "^3.4.21",
        "commitizen": "^4.3.0",
        "critters": "^0.0.22",
        "cross-env": "^7.0.3",
        "cspell": "^7.3.6",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "rollup-plugin-analyzer": "^4.0.0",
        "stylelint": "^15.11.0",
        "typescript": "^5.4.3",
        "unocss": "^0.58.6",
        "vite": "^5.2.6",
        "vite-plugin-inspect": "^0.8.3",
        "vite-plugin-pages": "^0.32.0",
        "vite-plugin-vue-layouts": "^0.11.0",
        "vite-ssg": "^0.23.6",
        "vue-tsc": "^2.0.7"
    }
}
